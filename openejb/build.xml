<project 
	name="openmdx-openejb" 
	default="-projecthelp"
	xmlns:openmdx="xri://(antlib:org.openmdx.tools.ant)"
	xmlns:antcontrib="antlib:net.sf.antcontrib"
>
	<description>Builds openMDX/Platform OpenEJB</description>
	<property name="project.specification.title" value="openMDX/OpenEJB"/>

	<property name="openmdx.home" location=".."/>

	<!-- Slash separated platform list, the last entry being the default -->
	<property name="project.platform.list" value="openejb-3"/>

	<!-- Included Ant Projects -->
	<import file="../ant/etc/ant/build-properties.xml"/>
	<import file="../ant/etc/ant/build-library.xml"/>
	
	<!-- OpenEJB -->    
	<path id="apache.openejb.lib">
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-loader-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-tomcat-common-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-tomcat-catalina-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-core-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-server-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-ejbd-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-webservices-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/asm-finder-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-jee-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/openejb-http-3.1.4.jar"/>
		<pathelement location="${build.dir}/module/openejb.war/lib/xbean-naming-3.7.jar"/>
	</path>
	<path id="project.lib.classpath">
		<path refid="openmdx.core.lib"/>	
		<path refid="openmdx.core.bin"/>	
		<path refid="apache.tomcat.lib"/>
		<path refid="apache.openejb.lib"/>
	</path>
	<path id="project.bin.classpath">
		<path refid="project.lib.classpath"/>
		<!-- pathelement location="${basedir}/src/resource"/ -->
		<pathelement location="${build.dir}/bin"/>
	</path>
	<patternset id="openejb-tomcat-catalina.jar.content">
		<include name="org/apache/openejb/tomcat/catalina/**"/>
	</patternset>
	<patternset id="catalina-extension.jar.content">
		<include name="org/openmdx/catalina/**"/>
	</patternset>	
	<!-- ******************************************************************* -->
	<!-- * generate -->
	<!-- ******************************************************************* -->
	<target name="generate" description="Generate version, jt and model dependend files" depends="build-init">
		<unzip src="${openejb.war}" dest="${build.dir}/module/openejb.war" overwrite="true"/>
	</target>
	<!-- ******************************************************************* -->
	<!-- * deliverables -->
	<!-- ******************************************************************* -->
	<target 
		name="deliverables" 
		description="Populate the project's distribution directory" 
		depends="deliverables-init,java-archives,source-archives"
	/>
	<!-- ******************************************************************* -->
	<!-- * java-archives -->
	<!-- ******************************************************************* -->
	<target name="java-archives" depends="deliverables-init,build">
		<openmdx:archive
			destfile="${deliver.dir}/lib/openejb-tomcat-catalina-3.1.4.jar"
			format="jar"
			duplicate="preserve"
		>
			<openmdx:archivemanifest refid="project.manifest"/>
			<openmdx:archivemanifest>
				<attribute name="Specification-Title" value="${project.specification.title} Library OpenEJB Tomcat Catalina"/>
				<attribute name="Implementation-Title" value="OpenEJB Tomcat Catalina for ${build.target.platform}"/>
			</openmdx:archivemanifest>
			<openmdx:archivefileset dir="${build.dir}/bin">
				<patternset refid="openejb-tomcat-catalina.jar.content"/>
			</openmdx:archivefileset>
			<openmdx:archivefileset src="${build.dir}/module/openejb.war/lib/openejb-tomcat-catalina-3.1.4.jar"/>
		</openmdx:archive>
		<openmdx:archive
			destfile="${deliver.dir}/lib/catalina-extension.jar"
			format="jar"
		>
			<openmdx:archivemanifest refid="project.manifest"/>
			<openmdx:archivemanifest>
				<attribute name="Specification-Title" value="${project.specification.title} Extended Catalina Archive"/>
				<attribute name="Implementation-Title" value="catalina.jar for ${build.target.platform}"/>
			</openmdx:archivemanifest>
			<openmdx:archivefileset dir="${build.dir}/bin">
				<patternset refid="catalina-extension.jar.content"/>
			</openmdx:archivefileset>
		</openmdx:archive>		
	</target>
	<!-- ******************************************************************* -->
	<!-- * assemble -->
	<!-- ******************************************************************* -->
	<target name="assemble" description="Builds the openEJB WARs and EARs" depends="build-init">
	</target>
	<!-- ******************************************************************* -->
	<!-- * distribution -->
	<!-- ******************************************************************* -->
	<target 
		name="distribution" 
		description="Creates a distribution" 
		depends="distribution-init,deliverables,assemble">
		<openmdx:archive 
			destfile="${distribution.dir}/openmdx-${project.implementation.version}-openejb.${build.target.platform}."
			format="${distribution.format}"
			checksum="MD5"
		>
			<openmdx:archivefileset 
				dir="${basedir}" 
				prefix="${project.implementation.prefix}-${project.implementation.version}/${base.dir.name}"
			>
				<include name="LICENSE"/>
				<include name="README"/>
				<include name="RELEASE-NOTES"/>
				<include name="build.xml"/>
				<include name="*.properties"/>
				<include name="*-properties.xml"/>
				<include name=".cvsignore"/>
				<include name="etc/**"/>
			</openmdx:archivefileset>
			<openmdx:archivefileset 
				dir="${project.home}" 
				prefix="${project.implementation.prefix}-${project.implementation.version}"
			>
				<include name="${build.target.platform}/openejb/**"/>
				<include name="source-archive/openejb/**"/>
				<include name="apache/${build.java.platform}/openejb/**"/>
			</openmdx:archivefileset>
			<openmdx:archivefileset 
				dir="${project.home}/${base.dir.name}" 
				prefix="${project.implementation.prefix}-${project.implementation.version}/${base.dir.name}/"
			>
				<include name=".classpath"/>
				<include name=".project"/>
			</openmdx:archivefileset>
			<openmdx:archivefilterchain>
				<patternset>
					<include name="**/.project"/>
					<include name="**/.classpath"/>
				</patternset>
				<tokenfilter>
				    <replaceregex pattern="( \(.*\))? ~ " replace=" (${project.implementation.version}) ~ "/>
				</tokenfilter>
			</openmdx:archivefilterchain>						
		</openmdx:archive>
	</target>
</project>
