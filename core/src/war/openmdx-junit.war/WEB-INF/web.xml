<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN' 'http://java.sun.com/j2ee/dtds/web-app_2.2.dtd'>
<web-app>
	<display-name>JUnit Servlet Web Component</display-name>
	<description>A handy package for the servlet, JUnit itself, and a nice UI.</description>
	<servlet>
		<servlet-name>TestRunnerServlet</servlet-name>
		<display-name>TestRunnerServlet</display-name>
		<servlet-class>junit.servletui.TestRunnerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestRunnerServlet</servlet-name>
		<url-pattern>/TestRunnerServlet</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>
