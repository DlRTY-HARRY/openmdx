<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE openmdx-ejb-jar PUBLIC "-//openMDX//DTD Enterprise JavaBeans Extension 1.0//EN" "http://www.openmdx.org/dtd/openmdx-ejb-jar_1_0.dtd">
<openmdx-ejb-jar>
  	<enterprise-beans>
    	<session>
      		<ejb-name>document1-Volatile</ejb-name>
			<jndi-name>org/openmdx/test/document1/Volatile</jndi-name>
	      	<pool>
	        	<initial-capacity>1</initial-capacity>
	        	<maximum-capacity>10</maximum-capacity>
	        	<maximum-wait>10000</maximum-wait>
	      	</pool>
    	</session>
    	<session>
      		<ejb-name>document1-Persistent</ejb-name>
			<jndi-name>org/openmdx/test/document1/Persistent</jndi-name>
			<resource-ref>
				<res-ref-name>jdbc/datasource[0]</res-ref-name>
				<jndi-name>jdbc/openMDX_test</jndi-name>
			</resource-ref>
	      	<pool>
	        	<initial-capacity>1</initial-capacity>
	        	<maximum-capacity>10</maximum-capacity>
	        	<maximum-wait>10000</maximum-wait>
	      	</pool>
    	</session>
  	</enterprise-beans>
</openmdx-ejb-jar>
