<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>openMDX Log Remote Sink</display-name>
  <description>
    openMDX Log Remote Sink.
  </description>


  <!-- Action Servlet Configuration -->
  <servlet>
    <servlet-name>logsink</servlet-name>
    <servlet-class>
      org.openmdx.application.servlet.log.sink.LogSinkServlet
    </servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <!-- Define the LogConsole Servlet Mapping -->
  <servlet-mapping>
    <servlet-name>logsink</servlet-name>
    <url-pattern>/sink/*</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>LogSink Application</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

</web-app>
