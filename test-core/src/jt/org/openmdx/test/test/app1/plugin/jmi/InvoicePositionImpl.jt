package org.openmdx.test.test.app1.plugin.jmi;

import java.util.Set;

import org.openmdx.base.accessor.jmi.cci.RefObject_1_0;
import org.openmdx.base.accessor.jmi.cci.RefPackage_1_0;
import org.openmdx.base.accessor.jmi.spi.RefObject_1;
import org.openmdx.compatibility.base.naming.Path;

#if defined(BEFORE16)
import org.openmdx.test.app1.cci.Invoice;
import org.openmdx.test.app1.cci.InvoicePosition;
import org.openmdx.test.app1.cci.Product;
#else
import org.openmdx.test.app1.jmi1.Invoice;
import org.openmdx.test.app1.jmi1.InvoicePosition;
import org.openmdx.test.app1.jmi1.Product;
#endif

/**
 * 
 */
public class InvoicePositionImpl
    extends RefObject_1
{
  
    /**
	 * Implements <code>Serializable</code>
	 */
	private static final long serialVersionUID = 7867437562679915474L;

    /**
     * Constructor 
     *
     * @param delegate
     */
    public InvoicePositionImpl(
        InvoicePosition delegate
    ) {
        super(
            ((RefObject_1_0)delegate).refDelegate(), // TODO
            delegate.refClass()
        );
        this.delegate = delegate;
    }

    /**
     * 
     */
    private final InvoicePosition delegate;
    
    /**
     * 
     */
    public Set refDefaultFetchGroup(
    ) {
        Set group = super.refDefaultFetchGroup();
        // product is derived. Because it is cheap to calculate add it to default
        // fetch set    
        group.add("product");
        return group;
    }
  
    public Product getProduct(
    ) {
        Invoice invoice = this.delegate.getInvoice();
    
        // calculate identity of product from Invoice.productGroupId and InvoicePosition.productId
        // .../productGroup/<productGroupId>/product/<productId>
        Path productIdentity = this.refGetPath().getPrefix(this.refGetPath().size()-4).getDescendant(
            new String[]{"productGroup", invoice.getProductGroupId(), "product", this.delegate.getProductId()}
        );
        
        return (Product)((RefPackage_1_0)this.refOutermostPackage()).refObject(
            productIdentity.toUri()
        );
    }

  //---------------------------------------------------------------------------
  // Variables  
  //---------------------------------------------------------------------------  
  
}

