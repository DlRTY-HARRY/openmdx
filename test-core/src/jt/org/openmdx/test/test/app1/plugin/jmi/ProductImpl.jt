package org.openmdx.test.test.app1.plugin.jmi;

import java.math.BigDecimal;
import java.util.Set;

import org.openmdx.base.accessor.jmi.cci.JmiServiceException;
import org.openmdx.base.accessor.jmi.cci.RefObject_1_0;
import org.openmdx.base.accessor.jmi.spi.RefObject_1;
import org.openmdx.base.exception.ServiceException;

#if defined(BEFORE16)
import org.openmdx.test.app1.cci.Product;
#else
import org.openmdx.test.app1.jmi1.Product;
#endif
 
/**
 * 
 */
public class ProductImpl
    extends RefObject_1
{  
    /**
     * Implements <code>Serializable</code>
     */
    private static final long serialVersionUID = 631303461886360439L;

    /**
     * Constructor 
     *
     * @param delegate
     */
    public ProductImpl(
        Product delegate
    ) {
        super(
            ((RefObject_1_0)delegate).refDelegate(), // TODO
            delegate.refClass()
        );
        this.delegate = delegate;
    }

    /**
     * 
     */
    private final Product delegate;

    /**
     * 
     */
    private BigDecimal price = null;

    /**
     * 
     */
    public Set refDefaultFetchGroup(
    ) {
        Set group = super.refDefaultFetchGroup();
        if(!isCalculated()) {
            // let's suppose price is very expensive to calculate. Remove price
            // from default fetch group if not already calculated
            group.remove("price");
        }
        return group;
    }
        
    /**
     * 
     * @return
     */
    private boolean isCalculated(
    ) {
        return this.price != null;
    }
  
    /**
     * 
     * @throws JmiServiceException
     */
    private void calculate(
    ) throws JmiServiceException {
        if(!isCalculated()) try {
            // a cast to DelegatingProductImpl and get the tarif feature with 
            // a typed getter is also possible
            String tarif = (String)this.refDelegate().objGetValue("tarif");
         
            // price
            this.price = "T99".equals(tarif) ?
                new BigDecimal(100.00) :
                new BigDecimal(5.0);
         
            // other derived features
        } catch(ServiceException e) {
          throw new JmiServiceException(e);    
        }
    }

    /**
     * 
     * @return
     */
    public String getDescription(
    ) {  
        return this.refMofId();
    }
    
    /**
     * derived feature price.
     */
    public BigDecimal getPrice(
    ) {
        this.calculate();
        return this.price;
    }
  
}
