<project name="openmdx-jre-1.6-properties">

	<property name="build.target.platform" value="jre-1.6"/>
	<property name="build.target.version" value="1.6"/>

	<property name="model.build.formats" value="--format=xmi1 --format=uml.openmdx-1 --format=uml2.openmdx-1 --format=cci2 --format=jmi1 --format=jpa3 "/>
	
	<condition property="build.target.jre" value="${java.home}">
		<equals arg1="${java.specification.version}" arg2="${build.target.version}"/>
	</condition>
	<property name="build.target.jre" value="${env.JRE_16}"/>

	<condition property="build.exclude.platform">
		<not>
			<available file="${openmdx.home}/osgi/jre-1.6/enterprise/lib" type="dir"/>
		</not>
	</condition>
	<patternset id="build.exclude">
		<exclude name="${project.build.exclude.1}" if="project.build.exclude.1"/>
		<exclude name="${project.build.exclude.2}" if="project.build.exclude.2"/>
		<exclude name="${project.build.exclude.3}" if="project.build.exclude.3"/>
		<exclude name="${project.build.exclude.4}" if="project.build.exclude.4"/>
		<exclude name="${project.build.exclude.5}" if="project.build.exclude.5"/>
		<exclude name="${project.build.exclude.6}" if="project.build.exclude.6"/>
		<exclude name="${project.build.exclude.7}" if="project.build.exclude.7"/>
		<exclude name="${project.build.exclude.8}" if="project.build.exclude.8"/>
		<exclude name="${project.build.exclude.9}" if="project.build.exclude.9"/>
		<exclude name="${project.build.exclude.10}" if="project.build.exclude.10"/>
		<exclude name="${project.build.exclude.11}" if="project.build.exclude.11"/>
		<exclude name="${project.build.exclude.12}" if="project.build.exclude.12"/>
		<exclude name="${project.build.exclude.13}" if="project.build.exclude.13"/>
		<exclude name="${project.build.exclude.14}" if="project.build.exclude.14"/>
		<exclude name="${project.build.exclude.15}" if="project.build.exclude.15"/>
		<exclude name="${project.build.exclude.16}" if="project.build.exclude.16"/>
	</patternset>
	<path id="java.bootstrap.lib">
		<pathelement location="${build.target.jre}/lib/rt.jar"/>
	</path>	
	<path id="java.standard.lib">
		<pathelement location="${build.target.jre}/lib/jce.jar"/>
		<pathelement location="${build.target.jre}/lib/jsse.jar"/>
	</path>	
	<!-- OSGi -->
	<path id="osgi.enterprise.api">
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/enterprise/lib/osgi.enterprise.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/enterprise/lib/osgi.enterprise.persistence.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/enterprise/lib/osgi.enterprise.servlet.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/enterprise/lib/osgi.enterprise.transaction.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/enterprise/lib/osgi.enterprise.xml.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/enterprise/lib/osgi.enterprise.el.jar"/>
	</path>
	<path id="osgi.extension.lib">
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/commons-collections.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/commons-lang.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/jcache.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/jdo2-api.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/junit.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/hamcrest-core.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/mail.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/openjpa.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/resource.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/serp.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/netscape-ldap.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/ejb.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/javax.enterprise.deploy.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/javax.el.jar"/>
		<pathelement location="${openmdx.home}/osgi/${build.java.platform}/extension/lib/annotations.jar"/>
	</path>
	<path id="osgi.enterprise.lib">
		<path refid="osgi.enterprise.api"/>
		<path refid="java.standard.lib"/>		
	</path>
	<!-- JPA -->
	<path id="jpa.ant.lib">
		<path refid="osgi.extension.lib"/>
		<path refid="osgi.enterprise.lib"/>
		<pathelement location="${openmdx.home}/${build.java.platform}/ant/lib/openmdx-ant.jar"/>
	</path>
	<path id="jpa.ant.bin">
		<path refid="jpa.ant.lib"/>
		<path refid="project.bin.classpath"/>
	</path>	
	<path id="openmdx.core.lib">
		<pathelement location="${openmdx.home}/${build.java.platform}/core/lib/openmdx-system.jar"/>
		<pathelement location="${openmdx.home}/${build.java.platform}/core/lib/openmdx-base.jar"/>
	</path>
	<path id="microsoft.sql-server.lib">
		<pathelement location="${openmdx.home}/opt/microsoft/${build.java.platform}/sql-server-2005/lib/sqljdbc.jar"/>
	</path>
	<path id="oracle.jdbc.lib">
		<pathelement location="${openmdx.home}/opt/oracle/${build.java.platform}/oracle-11/lib/ojdbc6.jar"/>
		<pathelement location="${openmdx.home}/opt/oracle/${build.java.platform}/oracle-11/lib/orai18n.jar"/>
	</path>
	<path id="postgresql.jdbc.lib">
		<pathelement location="${openmdx.home}/opt/postgresql/${build.java.platform}/postgresql-9/lib/postgresql-9.2.jdbc4.jar"/>
	</path>
	<path id="openmdx.bootstrap.bin">
	    <path refid="osgi.enterprise.lib"/>
	    <path refid="osgi.extension.lib"/>
	    <pathelement location="${openmdx.home}/core/src/resource"/>
		<pathelement location="${openmdx.home}/core/build/${build.java.platform}/bin"/>
	</path>
	<path id="openmdx.core.bin">
	    <path refid="openmdx.bootstrap.bin"/>
		<pathelement location="${openmdx.home}/core/build/${build.java.platform}/src/resource"/>
		<pathelement location="${openmdx.home}/core/build/${build.java.platform}/model/openmdx-core.openmdx-xmi.zip"/>
	</path>

</project>
